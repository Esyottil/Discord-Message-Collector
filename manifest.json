{
  "manifest_version": 3,
  "name": "Discord Message Collector",
  "version": "1.0",
  "description": "Collect messages from specific users in Discord",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://discord.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Discord Message Collector"
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}